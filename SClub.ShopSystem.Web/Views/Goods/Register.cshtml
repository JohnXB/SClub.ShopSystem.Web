
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>用户注册</title>
    <link href="~/Css/Goods/Sign.css" rel="stylesheet" />
    <script src="~/Js/jquery-1.11.0.min.js"></script>
    <script src="~/Js/Goods/Sign.js"></script>
</head>
<body>
    
    
    <div id="top"><img src="~/Img/steam.png" id="logo" /><h1>用户注册</h1></div>
    <div class="form-bak">
        <form method="post" action="/Goods/SaveRegister" onsubmit="adaptValue();">
            <div class="left">
                <div class="line" id="line_account">
                    <div class="info">
                        <strong>账号</strong>
                        <span class="tips">账号必须小于15位数</span>
                    </div>
                    <div class="input">
                        <input type="text" name="user[Account]" id="account" onblur="v_account();" onkeyup="v_account();" style="color:#000;" />
                        <div class="none">
                            <span></span>
                        </div>
                    </div>
                </div>
                <div class="line" id="line_name">
                    <div class="info">
                        <strong>用户名</strong>
                        <span class="tips">只能由数字、文字或下划线组成<br />最多15个字符</span>
                    </div>
                    <div class="input">
                        <input type="text" name="user[Name]" id="name" onblur="v_name();" onkeyup="v_name();" style="color:#000;" />
                        <div class="none">
                            <span></span>
                        </div>
                    </div>
                </div>
                <div class="line" id="line_password">
                    <div class="info">
                        <strong>密码</strong>
                        <span class="tips">6至16个字符</span>
                    </div>
                    <div class="input">
                        <input type="password" name="user[Password]" id="password" onblur="v_password();" onkeyup="v_password();" style="color:#000;" />
                        <div class="none">
                            <span></span>
                        </div>
                    </div>
                </div>
                <div class="line" id="line_repeat">
                    <div class="info">
                        <strong>确认密码</strong>
                        <span class="tips">再次输入密码</span>
                    </div>
                    <div class="input">
                        <input type="password" name="repeat" id="repeat" onblur="v_repeat();" onkeyup="v_repeat();" style="color:#000;" />
                        <div class="none">
                            <span></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="right">
                <input type="submit" id="submit" value="完成注册" disabled="disabled" />
                <div class="readagreement-wrap" onclick="onReadAgreementClick();">
                    <input type="checkbox" name="agree" id="agree" onchange="v_submitbutton();"/>
                    同意《<a id="readagreement" href="#agreement" onclick="showAgreement();" title="查看用户使用协议">用户使用协议</a>》
                </div>
                <div>已经拥有账号，<a href="#">直接登录</a></div>
                <div>忘记密码,@Html.ActionLink("首页", "GoodsList", new { style = "home" })</div>
            </div>
        </form>
    </div>
    <div id="agreement" class="agreement" style="display:none;">
        <h1>用户使用协议</h1>
        <iframe src=""></iframe>
        <input type="button" value="同意" onclick="agree();" id="button" />
        <a href="#" class="backtotop">返回顶部</a>
    </div>
</body>
</html>
