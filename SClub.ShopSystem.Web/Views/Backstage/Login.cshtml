
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Css/login.css" rel="stylesheet" />
    <title>后台登录</title>
</head>
<body>
    @if ((string)TempData["IfLogin"] == "未登录")
    {
        <script language="JavaScript">alert("请先登录再进入系统！")</script>
    }
   
    <div id="login">

        <h2><span class="fontawesome-lock"></span>后台登录</h2>

        <form action="IfLogin" method="post">

            <fieldset>
                @if ((string)TempData["LoginWrong"] == "登录错误")
                {
                    <p><label id="wrong" style="color:red">用户名或密码错误</label></p>
                }
                <p><label for="id">账号</label></p>
                <p><input id="in" name="id"></p> 

                <p><label >密码</label></p>
                <p><input type="password" id="in" name="password"></p>

                <p><input type="submit" id="signin" value="Sign in" onclick="CheckIfLogin(id.value,password.value)"></p>

                
            </fieldset>

        </form>

    </div> 
