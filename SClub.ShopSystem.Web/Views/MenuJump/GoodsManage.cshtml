
@{
    ViewBag.Title = "商品管理";
    Layout = "~/Views/Backstage/_BackstageLayout.cshtml";
}


@using SClub.ShopSystem.Web.Models;
@{
    AdminModel user = (AdminModel)Session["admin"];
    if ((string)TempData["changeGoodsInfo"] == "修改成功")
    {
        <script>alert("修改成功")</script>
    }
    if ((string)TempData["changeGoodsInfo"] == "修改失败")
    {
        <script>alert("修改失败")</script>
    }
}
<link href="~/Css/MenuJump/Table.css" rel="stylesheet" />
<link href="~/Css/MenuJump/Modal.css" rel="stylesheet" />

<fieldset class="layui-elem-field layui-field-title" style="margin-top:0px;text-align:center;">
    <legend style="padding-top:20px;">商品管理</legend>
</fieldset>
<div style="width:98%;margin:auto;margin-bottom:20px;">
    <button class="layui-btn layui-btn-normal" value="游戏" onclick="ChangeTable(value);">精品游戏</button>
    <button class="layui-btn layui-btn-normal" value="装备" onclick="ChangeTable(value); ">豪华装备</button>
    <button class="layui-btn layui-btn-normal" value="周边" onclick="ChangeTable(value);">精美周边</button>
    <button class="layui-btn layui-btn-normal" value="未上架" onclick="ChangeTable(value);">未上架商品</button>
</div>




<form action="/Backstage/Unshelve" method="post">
    <table class="layui-table">
        <colgroup>
            <col width="150">
            <col width="200">
            <col>
        </colgroup>
        <thead>
            <tr id="tableHead">
                <th>商品编号</th>
                <th>商品名</th>
                <th>库存</th>
                <th>销量</th>
                <th>成本</th>
                <th>售价</th>
                <th>上架时间</th>
                <th>操作</th>
            </tr>

        </thead>

        <tbody id="tableBody"></tbody>
    </table>
</form>
<div id="paging" style="text-align:center">
</div>

<script src="~/Js/jquery-1.11.0.min.js"></script>
<script src="~/Js/layui/layui.js"></script>
<script src="~/Js/MenuJump/GoodsManageAjax.js"></script>


